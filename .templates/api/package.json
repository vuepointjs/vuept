{
  "name": "@vuept_template/solution-api",
  "version": "1.0.0-alpha.1",
  "description": "VuePoint.js Solution REST API - __api-key__",
  "author": "__author-name__",
  "license": "MIT",
  "private": true,
  "main": "server/server.js",
  "config": {
    "vp-solution-role": "api",
    "vp-key": "__api-key__",
    "container-image-name": "__api-key__-__suite-key__",
    "internal-port": "443",
    "external-port": "443",
    "client-rel-path": "../app/__app-key__/dist/.",
    "tdev-client-rel-path": "../app/dist/.",
    "tdev-db-image": "microsoft/mssql-server-linux:latest",
    "tdev-db-container": "vuept-sql-dev1",
    "tdev-db-name": "vpdev",
    "tdev-db-pwd": "vueptDEV1!",
    "tdev-db-sqlcmd": "/opt/mssql-tools/bin/sqlcmd"
  },
  "scripts": {
    "lint": "eslint .",
    "clean": "shx rm -f *.log",
    "start": "cross-env NODE_ENV=production DEBUG= node .",
    "dev": "cross-env HTTP_ONLY=1 NODE_ENV=development DEBUG= nodemon .",
    "dev:verbose": "cross-env HTTP_ONLY=1 NODE_ENV=development DEBUG=loopback:connector:mssql,loopback:datasource,loopback:security:* nodemon .",
    "dev:noclient": "cross-env HOME_STATUS_ONLY=1 yarn dev",
    "debug": "cross-env NODE_ENV=development DEBUG=* && nodemon .",
    "client:clean": "shx rm -rf ./client/* && shx cp -r ./.client-default/. ./client/",
    "client:update": "yarn client:clean && cross-env-shell \"shx cp -r $npm_package_config_client_rel_path ./client/\"",
    "tdev:client:update": "yarn client:clean && cross-env-shell \"shx cp -r $npm_package_config_tdev_client_rel_path ./client/\"",
    "tdev:db:install:container": "cross-env-shell ACCEPT_EULA=Y SA_PASSWORD=\"$npm_package_config_tdev_db_pwd\" MSSQL_PID=Express yarn tdev:db:install:container:run",
    "tdev:db:install:container:run": "cross-env-shell \"docker run -e ACCEPT_EULA -e SA_PASSWORD -e MSSQL_PID --name $npm_package_config_tdev_db_container -p 1433:1433 -d $npm_package_config_tdev_db_image\"",
    "tdev:db:install:db": "cross-env-shell \"docker exec $npm_package_config_tdev_db_container $npm_package_config_tdev_db_sqlcmd -S localhost -U sa -P $npm_package_config_tdev_db_pwd -Q \\\"create database $npm_package_config_tdev_db_name\\\"\"",
    "tdev:db:install:schema": "cross-env SCHEMA_ONLY=1 SCHEMA_STRATEGY=force HTTP_ONLY=1 NODE_ENV=development DEBUG= node .",
    "tdev:db:install": "run-s tdev:db:install:*",
    "tdev:db:uninstall": "cross-env-shell \"docker container rm $npm_package_config_tdev_db_container -f\"",
    "tdev:db:start": "cross-env-shell \"docker start $npm_package_config_tdev_db_container\"",
    "tdev": "run-s tdev:db:start clean dev",
    "tdev:verbose": "run-s tdev:db:start clean dev:verbose"
  },
  "engines": {
    "node": ">=10.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuepointjs/vuept.git"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "compression": "^1.7.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^8.3.0",
    "loopback": "^3.22.2",
    "loopback-boot": "^3.1.1",
    "loopback-component-explorer": "^6.2.0",
    "loopback-connector-mssql": "^3.3.0",
    "loopback-connector-rest": "^3.2.0",
    "moment": "^2.22.2",
    "serve-favicon": "^2.5.0",
    "strong-error-handler": "^2.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "cross-env": "^5.2.0",
    "debug": "^3.1.0",
    "eslint": "^5.4.0",
    "eslint-config-loopback": "^8.0.0",
    "eslint-plugin-prettier": "^2.6.2",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "shx": "^0.3.2"
  }
}
