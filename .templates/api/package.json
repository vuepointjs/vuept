{
  "name": "@vuept_template/solution-api",
  "version": "1.0.0-alpha.1",
  "description": "VuePoint.js Solution REST API - __api-key__",
  "author": "__author-name__",
  "license": "MIT",
  "private": true,
  "main": "server/server.js",
  "config": {
    "vp-solution-role": "api",
    "vp-key": "__api-key__",
    "container-image-name": "__api-key__-__suite-key__",
    "internal-port": "443",
    "external-port": "443"
  },
  "scripts": {
    "lint": "eslint .",
    "clean": "shx rm -f *.log",
    "start": "cross-env NODE_ENV=production DEBUG= node .",
    "dev": "yarn clean && cross-env HTTP_ONLY=1 NODE_ENV=development DEBUG=loopback:connector:mssql,loopback:datasource,loopback:security:* nodemon .",
    "dev:noclient": "cross-env VP_LB_HOME=STATUS yarn dev",
    "debug": "yarn clean && cross-env NODE_ENV=development DEBUG=* && nodemon .",
    "prod": "cross-env NODE_ENV=production node ."
  },
  "engines": {
    "node": ">=10.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuepointjs/vuept.git"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "bluebird": "^3.5.1",
    "compression": "^1.7.2",
    "cors": "^2.5.2",
    "dotenv": "^6.0.0",
    "helmet": "^1.3.0",
    "jsonwebtoken": "^8.2.0",
    "loopback": "^3.22.0",
    "loopback-boot": "^3.1.1",
    "loopback-component-explorer": "^6.2.0",
    "loopback-connector-mssql": "^3.3.0",
    "loopback-connector-rest": "^3.2.0",
    "moment": "^2.21.0",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^2.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "cross-env": "^5.2.0",
    "debug": "^3.1.0",
    "eslint": "^5.4.0",
    "eslint-config-loopback": "^8.0.0",
    "eslint-plugin-prettier": "^2.6.2",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "shx": "^0.3.2"
  }
}
