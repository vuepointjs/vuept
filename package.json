{
  "name": "vuept",
  "version": "1.0.0-alpha.1",
  "description": "VuePoint.js",
  "author": "Copyright (c) 2018 Steve Lathrop",
  "license": "MIT",
  "private": true,
  "main": "index.js",
  "config": {
    "tdev-db-container": "vuept-sql-dev1",
    "tdev-db-name": "vpdev",
    "tdev-db-pwd": "vueptDEV1!",
    "tdev-db-sqlcmd": "/opt/mssql-tools/bin/sqlcmd",
    "tdev-db-data-dir": "/var/opt/mssql/data"
  },
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "start": "run-s bootstrap watch",
    "watch": "yarn l:watch",
    "clean": "rimraf packages/*/dist",
    "reset": "run-s clean l:clean",
    "build": "run-s clean l:build",
    "dryrun": "yarn l:dryrun",
    "publish": "run-s bootstrap build l:publish",
    "add:suite": "node ./scripts/add-suite",
    "add:app": "node ./scripts/add-app",
    "add:api": "node ./scripts/add-api",
    "add:pkg": "node ./scripts/add-pkg",
    "tdev": "lerna run tdev --stream --scope @vuept_template/*",
    "tdev:verbose": "lerna run tdev:verbose --stream --scope @vuept_template/*",
    "tdev:install": "lerna run tdev:db:install --stream --scope @vuept_template/*",
    "tdev:uninstall": "lerna run tdev:db:uninstall --stream --scope @vuept_template/*",
    "tdev:db:start": "cross-env-shell \"docker start $npm_package_config_tdev_db_container\"",
    "tdev:db:stop": "cross-env-shell \"docker stop $npm_package_config_tdev_db_container\"",
    "tdev:db:exec:sql": "cross-env-shell \"docker exec $npm_package_config_tdev_db_container $npm_package_config_tdev_db_sqlcmd -S localhost -U sa -P $npm_package_config_tdev_db_pwd -h -1 -W -Q \\\"$SQL\\\"\"",
    "tdev:db:ls:files": "cross-env-shell \"docker exec $npm_package_config_tdev_db_container ls -lh $npm_package_config_tdev_db_data_dir\"",
    "tdev:db:ls:tables": "cross-env-shell SQL=\"use $npm_package_config_tdev_db_name; select name from sysobjects where type = 'U'\" yarn tdev:db:exec:sql",
    "tdev:db:ls": "run-s tdev:db:ls:*",
    "l:clean": "lerna clean --yes",
    "l:build": "lerna run build",
    "l:publish": "lerna publish",
    "l:dryrun": "lerna publish --skip-npm --skip-git",
    "l:watch": "lerna run watch --parallel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuepointjs/vuept.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/vuepointjs/vuept/issues"
  },
  "homepage": "https://github.com/vuepointjs/vuept#readme",
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.4.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-vue": "^4.7.1",
    "inquirer": "^6.2.0",
    "lerna": "^3.2.1",
    "lodash": "^4.17.10",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2"
  },
  "workspaces": [
    ".templates/*",
    "packages/**",
    "solution/**"
  ]
}
