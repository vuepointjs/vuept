{
  "name": "vuept",
  "version": "1.0.0-alpha.1",
  "description": "VuePoint.js",
  "author": "Copyright (c) 2018 Steve Lathrop",
  "license": "MIT",
  "private": true,
  "main": "index.js",
  "config": {
    "tdev-db-image": "microsoft/mssql-server-linux:latest",
    "tdev-db-container": "vuept-sql-dev1",
    "tdev-db-name": "vpdev",
    "tdev-db-pwd": "vueptDEV1!",
    "tdev-db-sqlcmd": "/opt/mssql-tools/bin/sqlcmd",
    "tdev-db-data-dir": "/var/opt/mssql/data"
  },
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "start": "run-s -s bootstrap watch",
    "watch": "yarn l:watch",
    "clean": "rimraf packages/*/dist",
    "reset": "run-s -s clean l:clean",
    "build": "run-s -s clean l:build",
    "dryrun": "yarn l:dryrun",
    "publish": "run-s -s bootstrap build l:publish",
    "add:suite": "node ./scripts/add-suite",
    "add:app": "node ./scripts/add-app",
    "add:api": "node ./scripts/add-api",
    "add:pkg": "node ./scripts/add-pkg",
    "info:all": "lerna run dev:info --stream --scope @vuept_solution/*",
    "info:all:verbose": "lerna run dev:info:verbose --stream --scope @vuept_solution/*",
    "tdev": "run-s -s tdev:db:start tdev:all",
    "tdev:verbose": "run-s -s tdev:db:start tdev:all:verbose",
    "tdev:all": "cross-env-shell TDEV=1 lerna run dev --parallel --no-bail --scope @vuept_template/*",
    "tdev:all:verbose": "cross-env-shell TDEV=1 lerna run dev:verbose --stream --scope @vuept_template/*",
    "tdev:info:all": "cross-env-shell TDEV=1 lerna run dev:info --stream --concurrency 1 --loglevel warn --scope @vuept_template/*",
    "tdev:info:all:verbose": "cross-env-shell TDEV=1 lerna run dev:info:verbose --stream --concurrency 1 --loglevel verbose --scope @vuept_template/*",
    "tdev:install": "run-s -s tdev:db:install",
    "tdev:uninstall": "run-s -s tdev:db:uninstall",
    "tdev:db:start": "cross-env-shell \"docker start $npm_package_config_tdev_db_container\"",
    "tdev:db:stop": "cross-env-shell \"docker stop $npm_package_config_tdev_db_container\"",
    "tdev:db:exec:sql": "cross-env-shell \"docker exec $npm_package_config_tdev_db_container $npm_package_config_tdev_db_sqlcmd -S localhost -U sa -P $npm_package_config_tdev_db_pwd -h -1 -W -Q \\\"$SQL\\\"\"",
    "tdev:db:ls:files": "cross-env-shell \"docker exec $npm_package_config_tdev_db_container ls -lh $npm_package_config_tdev_db_data_dir\"",
    "tdev:db:ls:tables": "cross-env-shell SQL=\"use $npm_package_config_tdev_db_name; select name from sysobjects where type = 'U'\" yarn tdev:db:exec:sql",
    "tdev:db:ls": "run-s -s tdev:db:start tdev:db:ls:*",
    "tdev:db:install:container": "cross-env-shell ACCEPT_EULA=Y SA_PASSWORD=\"$npm_package_config_tdev_db_pwd\" MSSQL_PID=Express yarn tdev:db:install:container:run",
    "tdev:db:install:container:run": "cross-env-shell \"docker run -e ACCEPT_EULA -e SA_PASSWORD -e MSSQL_PID --name $npm_package_config_tdev_db_container -p 1433:1433 -d $npm_package_config_tdev_db_image\"",
    "tdev:db:install:db": "cross-env-shell \"docker exec $npm_package_config_tdev_db_container $npm_package_config_tdev_db_sqlcmd -S localhost -U sa -P $npm_package_config_tdev_db_pwd -Q \\\"create database $npm_package_config_tdev_db_name\\\"\"",
    "tdev:db:install:schema": "cd .templates/api && cross-env SCHEMA_ONLY=1 SCHEMA_STRATEGY=force HTTP_ONLY=1 NODE_ENV=development DEBUG= node .",
    "tdev:db:install": "run-s -s tdev:db:install:*",
    "tdev:db:uninstall": "cross-env-shell \"docker container rm $npm_package_config_tdev_db_container -f\"",
    "l:clean": "lerna clean --yes",
    "l:build": "lerna run build",
    "l:publish": "lerna publish",
    "l:dryrun": "lerna publish --skip-npm --skip-git",
    "l:watch": "lerna run watch --parallel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuepointjs/vuept.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/vuepointjs/vuept/issues"
  },
  "homepage": "https://github.com/vuepointjs/vuept#readme",
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.5.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-vue": "^4.7.1",
    "inquirer": "^6.2.0",
    "lerna": "^3.3.0",
    "lodash": "^4.17.10",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2"
  },
  "workspaces": [
    ".templates/*",
    "packages/**",
    "solution/**"
  ]
}
